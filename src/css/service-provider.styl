.wrap
  width 100%
  .content-header
    width 100%
    box-sizing border-box
    height 70px
    padding 2.5px 0
    &.header-fixed
      position fixed
      z-index 20
      background-color: #fff;
      top: 0
      left: 0
      height 0
      overflow hidden
      opacity 0
      transition all .5s
      &.active
        height 70px
        opacity 1
    .header
      width 1200px
      height 100%
      background-color #fff
      box-sizing border-box
      padding 0 15px
      margin 0 auto
      display flex
      justify-content space-between
      align-items center
      .location-nav
        width 727.88px
        height 42px
        display flex
        justify-content space-between
        .location
          width 151px
          height 42px
          display flex
          justify-content space-around
          align-items center
          >span
            font-weight bold
            color black
        .header-nav
          display flex
          .header-nav-item
            font-weight bold
            padding 10px 15px
            >a
              line-height 26px
              text-align center
              &.active
                color red
          .item-login
            >a
              background-color #f00
              color white
              display block
              width 76px
              height 28px
              border-radius 5px
  .content-container
    width 100%
    background-color: rgb(251, 248, 248)
    >h2
      line-height: 85px;
      width: 1200px;
      margin: 0 auto;
      font-size: 18px;
    .provider
      width 1200px
      margin: 0 auto;
      display flex
      justify-content space-between
      .provider-list
        width: 970px
        display flex
        justify-content space-between
        flex-wrap wrap
        .provider-item
          width: 232px;
          height: 300px;
          border: 1px solid #eaeaea;
          padding: 10px;
          margin-right: 10px;
          margin-bottom: 10px;
          background: #fff;
          cursor: pointer;
          box-sizing border-box
          &:hover
            box-shadow 3px 2px 2px 1px #eee
          >a
            >img
              width: 210px;
              height: 210px;
            .item-title
              display flex
              justify-content: left
              align-items center
              margin-top: 15px;
              >img
                display block
                margin-right: 8px;
              >span
                font-weight bold
            .price-rating
              font-size 13px
              color #7e8c8d
              display flex
              justify-content space-between
              align-items center
              margin-top 15px
    .ad
      width: 230px
      >div
        width 100%
        height: 290px
        background-image: url('../images/two.jpg');
        background-repeat: no-repeat;
        >img
          width 100%
          transform scale(.8)
  .footer
    width: 100%;
    padding-top: 100px;
    .safeguard
      width 100%
      text-align center
      .safeguard-title
        font-size 28px
        padding-bottom 15px
        >span
          color red
      .safeguard-desc
        font-size 23px
        font-weight normal
      .safeguard-promise
        display flex
        margin-top 20px
        justify-content center
        .safeguard-icon
          display flex
          margin: 0 10px;
          justify-content center
          align-items center
          >span
            font-size 18px
          >img
            width 22px
            height: 22px
            margin: 0 10px;
    .hot-city-wrapper
      width 100%
      margin-top: 50px;
      .hot-city
        width 1200px
        height 120px
        margin 0 auto
        display flex
        box-sizing border-box
        .hot-city-title
          font-size 18px
          text-align center
          width 80px
          font-weight bold
        .hot-city-name
          width: 1090px
          height: 93px
          display flex
          flex-wrap wrap
          margin-left: 50px;
          .city-name
            width: 98.09px
            height: 30px
            >a
              color #7e8c8d
    .partner-wrapper
      width 100%
      .partner
        width 1200px
        margin: 0 auto;
    .copyright-wrapper
      width 100%
      padding-bottom: 20px;
      .copyright
        width: 1200px;
        margin: 20px auto 0;
        text-align: left;
        color #7e8c8d
